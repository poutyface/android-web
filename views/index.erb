<a><strong><%= @cwd %></strong></h1>
<table class="table table-condensed">
<tbody>

<% @entries.each do |entry| %>
<tr>
   <% if ["directory", "link"].include? entry.ftype %>
   <td width="30px"><span class="label <%= entry.ftype=="directory" ? "label-success" : "label-warning"%>"><%= entry.ftype %></span></td>
   <td><a href="<%= entry.path %>"><%= entry.name %></td>
   <% else %>
   <td width="30px"><span class="label"><%= entry.ftype %></span></td>
   <td><%= entry.name %></td>
   <% end %>
</tr>
<% end %>
</tbody>
</table>
